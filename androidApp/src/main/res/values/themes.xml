<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="NightAdjusted.Theme.MyApplication" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.MyApplication" parent="NightAdjusted.Theme.MyApplication">
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>

    <style name="NightAdjusted.Theme.Splash" parent="Theme.SplashScreen">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
    </style>

    <style name="Theme.MyApplication.Splash" parent="NightAdjusted.Theme.Splash">
        <item name="postSplashScreenTheme">@style/Theme.MyApplication</item>
    </style>
</resources>